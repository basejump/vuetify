@require './_colors'

// Theme
// ============================================================
$body-font-family := 'Roboto', sans-serif
$font-size-root := 14px
$line-height-root := 1.5

$theme := {
  primary: $blue.darken-2
  accent: $blue.accent-2
  secondary: $grey.darken-3
  info: $blue.base
  warning: $amber.base
  error: $red.accent-2
  success: $green.base
}

//these are independent of material-light and dark below and can be used in either.
$dark-text-base := #000
$dark-foreground-colors := {
  primary: rgba($dark-text-base, .87)
  secondary: rgba($dark-text-base, .54),
  hint: rgba($dark-text-base, .38),
  divider: rgba($dark-text-base, .12),
  disabled: rgba($dark-text-base, .38),
  icon: rgba($dark-text-base, .54),
  icon-inactive: rgba($dark-text-base, .38) //this is same as disabled, does it need to be here?
}

$light-text-base := #fff
$light-foreground-colors := {
  primary: $light-text-base //primary default
  secondary: rgba($light-text-base, .7)
  hint: rgba($light-text-base, .5)
  divider: rgba($light-text-base, .12)
  disabled: rgba($light-text-base, .5)
  icon: rgba($light-text-base, 1)
  icon-inactive: rgba($light-text-base, .5)
}

//TODO this should match what in the "Contextuable" mixin
//TODO make it jive with https://material.io/color/
//a good read https://medium.com/eightshapes-llc/color-in-design-systems-a1c80f65fa3
$scheme-classes-defaults := {
  neutral: $grey.lighten-2, //default background for raised buttons, nav-drawer, toolbar
  primary: $blue.darken-2,
  secondary: $grey.darken-3,
  accent: $blue.accent-2,
  info: $blue.base,
  warning: $amber.base,
  error: $red.accent-2,
  success: $green.base
}
$scheme-classes = merge($scheme-classes-defaults, $scheme-classes is defined ? $scheme-classes : {} )

//here for POC only, by default we use dark text so only override for light text colors, there should be a way to merge this hash with above
//Its kept seperate right now because it spins through $scheme and adds them as css classes and we don't want that for these
//set to light or dark and to point to $light-text-colors or $dark-text-colors
$scheme-config-defaults := {
  //grey: "dark"
  primary-text: "light"
  secondary-text: "light"
  info-text: "light"
  //warning-text: "dark"
  error-text: "light"
  success-text: "light"
}
$scheme-config = merge($scheme-config-defaults, $scheme-config is defined ? $scheme-config : {} )

//expect the theme tone (primary, secondary, info, etc and returns the text hash for it)
//returns either dark or light-text-colors , dark-text by default if can't find the tone
$getTextColorHash(scheme_class)
  text_colors_hash = lookup('$' + $scheme-config[scheme_class+'-text'] + '-foreground-colors')
  return text_colors_hash ? text_colors_hash : $dark-foreground-colors

// Material Design - https://material.io/guidelines/style/color.html#color-usability
// ============================================================
$material-light := {
  status-bar: #E0E0E0,
  app-bar: #F5F5F5,
  background: #FAFAFA,
  cards: #FFFFFF,
  dividers: rgba(#000, .12),
  text: {
    primary: rgba(#000, .87),
    secondary: rgba(#000, .54),
    disabled: rgba(#000, .38)
  },
  icons: {
    active: rgba(#000, .54),
    inactive: rgba(#000, .38)
  },
  buttons: {
    disabled: rgba(#000, .26),
    focused: rgba(#000, .12),
    pressed: rgba(#999, .4)
  },


  bg-color: #fff
  fg-color: #000
  text-color: #000
  primary-text-percent: .87
  secondary-text-percent: .54
  disabledORhints-text-percent: .38
  divider-percent: .12
  active-icon-percent: .54
  inactive-icon-percent: .38
}
$material-dark := {
  status-bar: #000000,
  app-bar: #212121,
  background: #303030,
  cards: #424242,
  dividers: rgba(#fff, .12),
  text: {
    primary: #fff,
    secondary: rgba(#fff, .70),
    disabled: rgba(#fff, .50)
  },
  icons: {
    active: #fff,
    inactive: rgba(#fff, .5)
  },
  buttons: {
    disabled: rgba(#fff, .3),
    focused: rgba(#fff, .12),
    pressed: rgba(#ccc, .25)
  },


  bg-color: #303030
  fg-color: #fff
  text-color: #fff
  primary-text-percent: 1
  secondary-text-percent: .70
  disabledORhints-text-percent: .50
  divider-percent: .12
  active-icon-percent: 1
  inactive-icon-percent: .50
}

// Default Material Theme
// ============================================================
$material-theme := $material-light
$material-twelve-percent-light := rgba($material-dark.fg-color, $material-dark.divider-percent)
$material-twelve-percent-dark := rgba($material-light.fg-color, $material-light.divider-percent)


// Theme
// ============================================================
$body-bg-light := $material-light.background
$body-bg-dark := $material-dark.background
$body-color-light := rgba($material-dark.text-color, $material-dark.primary-text-percent)
$body-color-dark := rgba($material-light.text-color, $material-light.primary-text-percent)
$color-theme := rgba($material-theme.text-color, $material-theme.primary-text-percent)
